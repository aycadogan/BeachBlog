<%- include('./includes/head.ejs') %>
    <title><%= blog.title %> </title>
</head>

<body>
    <div class="container p-5">
        <div class="card shadow-lg rounded p-3">
            <div class="row">
                <div class="col-2">

                    <a href="/" class="rounded-pill shadow p-2 d-flex align-items-center justify-content-center"
                        style="text-decoration:none;">
                        <span class="" style="color:black">Back</span>
                    </a>
                </div>
                <div class="col-8">
                    <h2 style="color:#6B7B83 ;"> <%= blog.title %> </h2>
                </div>   
            </div>
            <div class="row">
                <div class="col-12 card-img">
                    <img src="/uploads/images/<%= blog.img %>" class="card-img" alt="img">
                </div>
            </div>
            <div class="d-flex align-items-end mt-3">
                <div class=" flex-grow-1">
                    <h5 class="mt-3" style="font-size: 16px; line-height: 0.5rem; ">
                        <span><b> <%= blog.author %></b></span></h5>
                    <p class="mt-4" style="font-size: 14px; line-height: 0.2rem;">
                        <%= blog.timeCreated.toLocaleDateString() %> %></p>
                </div>

            </div>
            <p class="card-text" style="font-style: italic;"> <%= blog.description %>
        </div>


    </div>

    <%- include('./includes/end.ejs') %> 