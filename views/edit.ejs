<%- include('./includes/head.ejs') %>
    <title>Edit blog post</title>
</head>

<body id="bg-color">
    <%- include('./includes/nav.ejs') %>
    <div class="container " >
        <h2 class="mb-4 text-white ">Editing <%= blog.title %> </h2>

        <form action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
            <div class="form-group">

                <label for="title" class="text-white">Title</label>
                <input type="text" class="form-control" placeholder="Title" name="title" value="<%= blog.title %>"
                    required>
            </div>

            <div class="form-group">

                <label for="author" class="text-white">Author</label>
                <input type="text" class="form-control" placeholder="Author" name="author" value="<%= blog.author %>"
                    required>
            </div>
            <div class="form-group">

                <label for="description" class="text-white">Description</label>
                <textarea name="description" class="form-control"><%= blog.description %></textarea>
            </div>

            <div class="form-group">
                <a href="/" class="btn btn-warning mt-5" id="buttons">Cancel</a>
                <button type="submit" class="btn btn-primary mt-5" id="buttons">Save</button>
            </div>
        </form>
    </div>

</body>
</html>