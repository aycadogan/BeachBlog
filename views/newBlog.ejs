<%- include('./includes/head.ejs') %>
    <title>New Blog Post</title>
</head>
<body id="bg-color">
    
    <div class="container">
        <h1 style="color: white;" class="mt-5 mb-5">New Blog Post</h1>
        <form action="/blogs" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title"> Title</label>
                <input type="text" class="form-control" placeholder="Title" name="title" required>
            </div>
            <div class="form-group mt-4">
                <label for="author"> Author</label>
                <input type="text" class="form-control" placeholder="Author" name="author" required>
            </div>
            <div class="form-group mt-4">
                <label for="description"> Description</label>
                <textarea name="description" class="form-control" rows="10"></textarea>
            </div>
            
            <div class="form-group mt-4">
                <label for="image"> Upload Image</label>
                <input type="file" name="image" id="image" class="form-control-file"></input>
            </div>

            <div class="form-group mt-3">
                <a href="/" class="btn" id="buttons">Cancel</a>
                <button type="submit" id="buttons" class="btn">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>

